        mc:Ignorable="d"
        Title="Конфигуратор проекта" Background="{DynamicResource ResultBackground}" Foreground="{DynamicResource ResultForeground}" Height="auto" Width="auto" MinHeight="400" MinWidth="800" WindowState="Maximized" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
