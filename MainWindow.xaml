        <ToolBarPanel Grid.Row="12" Grid.ColumnSpan="13">
            <TextBlock x:Name="myVersion" Text="Версия: 0.0.0.0"/>
        </ToolBarPanel>
        
        <CheckBox x:Name="CboxBlackTheames" IsThreeState="False" Grid.Column="4" Margin="0,8,0,0" Click="CheckBox_Click"></CheckBox>
    </Grid>
</Window>
